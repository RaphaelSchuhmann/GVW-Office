{
  "name": "gvw-office-snapshot",
  "version": "0.5.0-SNAPSHOT",
  "main": "main.js",
  "private": true,
  "scripts": {
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    
    "build": "vite build",
    "dist": "npm run build && electron-builder --win portable"
  },
  "build": {
    "appId": "com.gvw.office.snapshot",
    "productName": "GVW Office",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**",
      "main.js",
      "package.json",
      "preload.js"
    ],
    "win": {
      "target": "portable"
    }
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/vite": "^4.1.18",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "svelte": "^5.43.8",
    "tailwindcss": "^4.1.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "svelte-spa-router": "^4.0.1"
  }
}
